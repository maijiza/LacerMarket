  <%= f.text_field :titolo %>
</div>
<div class="field">
  <%= f.label :decrizione %><br>
  <%= f.text_area :decrizione, class:'materialize-textarea' %>
</div>
<div class="field">
  <%= f.label :Prezo %><br>
  <%= f.text_field :price %>
</div>
<br>
<div class="field"><br>
<label >Carica un immagine da utilizzare come cover </label><br>
  <%= f.file_field :cover%>
</div>
<div class="col l6">
  </div>
<br>

<br>
<div class="actions">
  <%= f.submit  'salva contenuto', class:'btn btn-form' %>
</div>
